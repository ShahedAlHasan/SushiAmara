<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.FinalCart">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/syst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deliveryto"
                android:textColor="#fff"
                android:textSize="22sp"/>
<!--            <ImageView
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/transfer"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup"
                android:textColor="#fff"
                android:textSize="18sp"/>-->

        </LinearLayout>

        <TextView
            android:id="@+id/location_show"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18sp"/>

<!--        <LinearLayout

            android:background="#FFF"
            android:padding="2dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24pt"
            android:layout_marginRight="24pt"
            >
            <TextView
                android:id="@+id/time"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SET TIME"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>-->


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/foodRecyTest"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/order"
                android:textSize="16sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/showPrice"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00.00"
                android:textSize="18sp"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/disText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rabatt  "
                android:textSize="16sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/DiscountPriceF"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00.00"
                android:textSize="18sp"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:id="@+id/distanLiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/distance_fare"
                android:textSize="16sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/distancePrice"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00.00"
                android:textSize="18sp"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total_vat_included"
                android:textSize="16sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/showPriceF"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00.00"
                android:textSize="18sp"
                android:textColor="#000"/>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="8dp"
            android:id="@+id/curt_master2F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="10dp"
            app:contentPadding="8dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cart_text"
                    android:text="@string/too_far_away"
                    android:textColor="@color/White"
                    />

            </LinearLayout>




        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>