<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="375dp"
    android:background="@drawable/custom_appoi"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_margin="2dp"
        android:background="@drawable/food3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="#802E3549"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_centerInParent="true"
                    android:id="@+id/food_curt_image2"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/food5"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>


                <TextView
                    android:layout_marginRight="8dp"

                    android:background="@drawable/circel_background"
                    android:id="@+id/txtclose2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="#FF0000"
                    android:text="X"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|end"
                    android:gravity="center"
                    />

            </RelativeLayout>





            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FoodETNAme2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/FoodETSub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:lineSpacingExtra="5dp"
                    android:id="@+id/FoodAllergens2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allergnes:"
                    android:textColor="#FFF"
                    android:layout_marginTop="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_note"
                        android:textColor="#FFF"
                        android:layout_marginTop="5dp"/>


                    <EditText
                        android:id="@+id/etNote2"
                        android:paddingTop="8dp"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/write_text_4"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_weight="3"
                        android:minLines="6"
                        android:maxLines="10"
                        android:gravity="start"
                        android:includeFontPadding="true"
                        android:inputType="textMultiLine"
                        android:textColor="#000"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12pt"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="8dp"
                    android:id="@+id/txtclose22"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:padding="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X"
                            android:layout_marginLeft="8dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/amiko_semibold"/>

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cancel"
                            android:layout_marginLeft="8dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/amiko_semibold"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/cart2"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/add_note0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/curt2_wh"/>
                        <TextView
                            android:id="@+id/add_note"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cart"
                            android:layout_marginLeft="4dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/amiko_semibold"/>

                        <TextView
                            android:id="@+id/foodPrice2"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120.00"
                            android:layout_marginLeft="6dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/amiko_semibold"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


