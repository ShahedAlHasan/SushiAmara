<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PickUpInfrormation">

    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/we_still_need_this_information"
                android:textColor="@color/Black"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/Black"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="#C7C7C7"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/man_user"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/first_name"
                        android:inputType="text"
                        android:hint="Vorname *"
                        android:textColor="@color/Black"
                        android:textAlignment="textStart"
                        android:paddingTop="4dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/pick_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="#C7C7C7"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/man_user"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/last_name"
                        android:inputType="text"
                        android:hint="Nachname *"
                        android:textColor="@color/Black"
                        android:textAlignment="textStart"
                        android:paddingTop="4dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/pick_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="#C7C7C7"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/telephone"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/phone"
                        android:inputType="phone"
                        android:hint="Telefonnummer *"
                        android:textColor="@color/Black"
                        android:textAlignment="textStart"
                        android:paddingTop="4dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/pick_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="#C7C7C7"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mail_black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/mail"
                        android:inputType="textEmailAddress"
                        android:hint="Email *"
                        android:textColor="@color/Black"
                        android:textAlignment="textStart"
                        android:paddingTop="4dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/pick_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="#C7C7C7"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/group_people"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/group"
                        android:hint="Firmenname (optional)"
                        android:textColor="@color/Black"
                        android:textAlignment="textStart"
                        android:paddingTop="4dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/pick_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="#C7C7C7"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/pick_note_if"
                        android:hint="Anmerkung für das Resturant"
                        android:textColor="@color/Black"
                        android:textAlignment="textStart"
                        android:paddingTop="4dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/pick_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/required_fields"
                    android:textAlignment="textEnd"
                    android:textSize="12sp"
                    android:textColor="@color/Black"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_pick_up_your_order_from_us"
                android:textColor="@color/Black"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/Black"/>

            <TextView
                android:id="@+id/dokan_name"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sushi Amara Langenfeld"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="address"
                />

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/when_can_you_pick_up_your_order_from_us"
                android:textColor="@color/Black"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/Black"/>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="4dp"
                android:background="@drawable/pick_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                >
                <Spinner
                    android:id="@+id/isp_pac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time2"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_would_you_like_to_pay"
                android:textColor="@color/Black"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/Black"/>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_including_vat"
                    />
                <TextView
                    android:id="@+id/vat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.50 €"
                    />

            </LinearLayout>

            <RadioGroup
                android:layout_marginTop="16dp"
                android:id="@+id/paymentype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:orientation="vertical" >

                <RadioButton
                    android:layout_marginTop="8dp"
                    android:text="@string/paypal_or_card"
                    android:textSize="18sp"
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/paypal" />
                <RadioButton
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:text="@string/cash_on_delivary"
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/payment_method" />
            </RadioGroup>



            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/complete_order_final"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/complete_order"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:background="@color/colorAccent"/>

            </LinearLayout>


            <TextView
                android:layout_marginBottom="72dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/under_the_button"
                />






        </LinearLayout>
    </ScrollView>

</LinearLayout>