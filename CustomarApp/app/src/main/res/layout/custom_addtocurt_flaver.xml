<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="425dp"
    android:background="@drawable/custom_appoi"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_margin="2dp"
        android:background="@drawable/food3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="#802E3549"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="#EE0000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="!Sie müssen noch mindestens 1 Auswahlmöglichkeiten treffen!"
                        android:textColor="@color/White"/>
                </LinearLayout>



                <TextView
                    android:background="@drawable/circel_background"
                    android:id="@+id/txtclosef"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="#fff"
                    android:text="X"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|end"
                    android:gravity="center"
                    />

            </RelativeLayout>





            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FoodETNAmef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/FoodETSubf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:lineSpacingExtra="4dp"
                    android:id="@+id/FoodAllergensf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allergnes:"
                    android:textColor="#FFF"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:id="@+id/heading"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:lineSpacingExtra="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lachs oder Hühnchen"
                    android:textColor="#FFF"
                    android:layout_marginTop="4dp"/>

                <RadioGroup
                    android:id="@+id/register_side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radio001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lachs(+3.00 €)"
                        android:textStyle="bold"
                        android:textColor="@color/White"
                        />

                    <RadioButton
                        android:id="@+id/radio002"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Hühnchen"
                        android:textColor="@color/White" />
                </RadioGroup>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_note"
                        android:textColor="#FFF"
                        />


                    <EditText
                        android:id="@+id/etNotef"
                        android:paddingTop="4dp"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/write_text_4"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_weight="3"
                        android:minLines="6"
                        android:hint="z.B. ohne Zwiebeln"
                        android:maxLines="10"
                        android:gravity="start"
                        android:includeFontPadding="true"
                        android:inputType="textMultiLine"
                        android:textColor="#000"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12pt"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="8dp"
                    android:id="@+id/txtclose2f"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:padding="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X"
                            android:layout_marginLeft="8dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/amiko_semibold"/>

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cancel"
                            android:layout_marginLeft="8dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/amiko_semibold"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/cartf"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/add_note0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/curt2_wh"/>
                        <TextView
                            android:id="@+id/add_note"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cart"
                            android:layout_marginLeft="4dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/amiko_semibold"/>

                        <TextView
                            android:id="@+id/foodPricef"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120.00"
                            android:layout_marginLeft="6dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/amiko_semibold"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


